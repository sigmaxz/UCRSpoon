<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/dp16"
              android:paddingRight="@dimen/dp16">
     <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="@dimen/dp4">
            
          <Button 
        		android:id="@+id/GoBackButton"
        		android:layout_width="96dp"
        		android:layout_height="wrap_content"
				android:gravity="left"
        		android:text="@string/go_back_label" />
         
     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:gravity="center"
            android:textSize="@dimen/text_medium"/>
     
   
     
     </LinearLayout>
     
     <LinearLayout 
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/dp16"
              android:paddingRight="@dimen/dp16">
     
         
         <ImageView 
  		      android:id="@+id/Rimage_1"
    		  android:layout_width="wrap_content"
    		  android:layout_height="wrap_content"
    		  android:adjustViewBounds="true"  
  			  android:maxWidth="35dp"  
  			  android:maxHeight="35dp"  
  			  android:scaleType="fitCenter" 
    		  android:src="@drawable/pic1" />
         
         
              
  		  <TextView
          	  	 android:layout_width="match_parent"
           		 android:layout_height="@dimen/dp8"
           	 	 android:id="@+id/RText_1"
           	 	 android:layout_marginTop="@dimen/dp16"
            	 android:layout_marginBottom="@dimen/dp4"
            	 android:textColor="@android:color/holo_blue_light"
            	 android:layout_weight="1"/>
  		  
  		  <ImageView 
  		      android:id="@+id/Rimage_2"
    		  android:layout_width="wrap_content"
    		  android:layout_height="wrap_content"
    		  android:adjustViewBounds="true"  
  			  android:maxWidth="35dp"  
  			  android:maxHeight="35dp"  
  			  android:scaleType="fitCenter" 
    		  android:src="@drawable/pic1" />
  		  
  		  
  		   <TextView
          	  	 android:layout_width="match_parent"
           		 android:layout_height="@dimen/dp8"
           	 	 android:id="@+id/RText_2"
           	 	 android:layout_marginTop="@dimen/dp16"
            	 android:layout_marginBottom="@dimen/dp4"
            	 android:textColor="@android:color/holo_green_light"
            	 android:layout_weight="1"/>
  		   
  		   
  		   <ImageView 
  		      android:id="@+id/Rimage_3"
    		  android:layout_width="wrap_content"
    		  android:layout_height="wrap_content"
    		  android:adjustViewBounds="true"  
  			  android:maxWidth="35dp"  
  			  android:maxHeight="35dp"  
  			  android:scaleType="fitCenter" 
    		  android:src="@drawable/pic2" />
  		   
  		   
  		   
  		   <TextView
          	  	 android:layout_width="match_parent"
           		 android:layout_height="@dimen/dp8"
           	 	 android:id="@+id/RText_3"
           	 	 android:layout_marginTop="@dimen/dp16"
            	 android:layout_marginBottom="@dimen/dp4"
            	 android:textColor="@android:color/holo_purple"
            	 android:layout_weight="1"/>
  		   
  		   
  		   <ImageView 
  		      android:id="@+id/Rimage_4"
    		  android:layout_width="wrap_content"
    		  android:layout_height="wrap_content"
    		  android:adjustViewBounds="true"  
  			  android:maxWidth="35dp"  
  			  android:maxHeight="35dp"  
  			  android:scaleType="fitCenter" 
  			  android:src="@drawable/pic2" />
  		   
  		   <TextView
          	  	 android:layout_width="match_parent"
           		 android:layout_height="@dimen/dp8"
           	 	 android:id="@+id/RText_4"
           	 	 android:layout_marginTop="@dimen/dp16"
            	 android:layout_marginBottom="@dimen/dp4"
            	 android:textColor="@android:color/holo_red_light"
            	 android:layout_weight="1"/>
	</LinearLayout>



</LinearLayout>