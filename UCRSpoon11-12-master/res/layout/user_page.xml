<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="@dimen/dp4">
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textSize="@dimen/text_small"
                android:paddingRight="@dimen/dp4"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cur_user"
                android:textSize="@dimen/text_small"
                android:paddingLeft="@dimen/dp4"/>
        
        <Button 
            	android:layout_width="@dimen/dp96"
                android:layout_height="@dimen/dp40"
                android:text="@string/log_out_button"
                android:id="@+id/LogOutButton"
                android:textSize="@dimen/text_micro"
                android:layout_marginLeft="@dimen/dp4" />
    </LinearLayout>
    
     <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp4"
            android:layout_marginTop="@dimen/dp4">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp4"
                android:gravity="left">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="@string/text_based_search"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4"/>

            <EditText
                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/search_filed"
                    android:textSize="@dimen/text_medium"
                    android:inputType="text"
                    android:layout_marginLeft="@dimen/dp4"
                    android:layout_marginRight="@dimen/dp4"
                    android:gravity="center_vertical"/>

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:layout_marginLeft="@dimen/dp4"/>

        </TableRow>
    </TableLayout>
 
     <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4">

        <Button
                android:layout_width="@dimen/dp96"
                android:layout_height="@dimen/dp40"
                android:text="@string/search_button"
                android:id="@+id/SearchButton"
                android:textSize="@dimen/text_micro"
                android:layout_marginLeft="@dimen/dp4"/>
        
        </LinearLayout>
        
     
     <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp192"
            android:gravity="left"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp4">
        
        <Button
            	android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:text="@string/browse_button"
                android:id="@+id/BrowseButton"
                android:textSize="@dimen/text_medium"
                android:layout_marginLeft="@dimen/dp4"/>
        
        <Button
            	android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:text="@string/near_by_button"
                android:id="@+id/NearByButton"
                android:textSize="@dimen/text_medium"
                android:layout_marginLeft="@dimen/dp4"/>
        

    </LinearLayout>
    


</LinearLayout>
